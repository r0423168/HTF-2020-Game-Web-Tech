{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"lib": [
			"ES2018"
		],
		"removeComments": true,
		"importHelpers": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2018"
	},
	"include": [
		"src/**/*.ts",
		"src/types/*",
		"types/*", "src/app/index.tsx"
	],
	"exclude": [
		"node_modules"
	]
}